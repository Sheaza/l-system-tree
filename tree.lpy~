import random

phi = 90
alpha = 32
beta  = 20
step = 0.1
leaf_step = 1
maximum_trunk_height = 3

Axiom: _(0.5)T(0)A(1.0)
# _ turtle width

derivation length: 600
production:

A(k) :
  
    p1 = min(1,(2*k+1)/k**2)
    r = random.random()
    if r <= p1:
        produce /(phi)[+(alpha)C(0.1,k)]-(beta)C(step,k)
    else:
        produce /(phi)[+(alpha)/(90);k(step)]-(beta)C(0.1,k)

C(x,k) :
    if x >= 1:
        if k < 26:
            produce F(1,0.05+0.25/k)A(k+1)
        else:
            produce F(1,0.05+0.25/k)
    else:
        produce C(x+step,k)

k(s):
  if (s == 175):
    # This adds some randomness to disappearing of leafs
    rnd = rd.random()
    if (rnd < 0.4):
      produce k(s+leaf_step)
    else:
      produce k(175)
  else:
    produce k(s+leaf_step)

T(t):
  if (t < maximum_trunk_height):
    produce SetColor(0) F(0.1) T(t+0.042)
  else:
    produce T(t)

homomorphism:

C(x,k):
    d = 1
    if k > 1:
        d = 0.05+0.25* ((x/k)+(1-x)/(k-1))
    else:
        d = (0.3*(1-x))+((0.05+0.25/k)*x)
    produce F(x, d)

k(s):
  endpoints = [60, 65, 70, 75, 80, 85, 90, 95, 100, 105, 110, 115, 120, 125, 130, 135, 140, 145, 150, 155, 160, 165, 170, 175]
  if s < 0:
    produce
  elif 0 <= s < 60:
    produce ;(1)~l((s*1.0)/60)
  elif 60 <= s <= 160:
    for e in range(len(endpoints) - 2):
      if endpoints[e] <= s < endpoints[e+1]:
        produce ;(e+2)~l(1)
  elif 160 < s <= 165:
    produce ;(22)~l(1)
  elif 165 < s <= 170:
    produce ;(23)~l(1)
  elif 170 < s <= 175:
    produce ;(24)~l(1)
  elif s >= 350:
    produce ;(41)@O(s / (4000 * 1.0))
  else:
    produce
